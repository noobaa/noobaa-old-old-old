<style>
	#nb_logo {
		width: 230px;
	}
	#nb_menubar {
		margin: 0px;
	}
	#nb_menubar #user_pic {
		text-align: center;
		cursor: pointer;
		margin: 20px 0px 15px 0px;
	}
	#nb_menubar #user_pic img {
		width: 44px;
	}
	#nb_menubar #menu_ext {
		margin: 0px;
		padding: 0px 20px 0px 20px;
		display: none;
	}
	#nb_menubar #menu_list {
		margin: 0px;
		padding: 15px 20px 0px 20px;
	}
</style>

<script type="text/javascript">
	$(function(){
		var m = $("#nb_menubar #menu_ext");
		var effects = {
			height:'toggle',
			width: 'toggle',
			opacity: 'toggle'
		};
		$("#nb_menubar .toggle_menu_ext").click(function() {
			m.stop().animate(effects, {duration: 1000});
		});
	});
</script>

<div id="nb_logo" class="brand">
	<img src="/public/noobaa/images/noobaa_logo.png"></img>
</div>
<div id="nb_menubar">
	<div id="user_pic" class="toggle_menu_ext"
		title="Click to expand user actions..."
		data-placement="bottom" rel="tooltip">
		<img src="https://graph.facebook.com/{{= it.user.username }}/picture"></img>
	</div>
	<div id="menu_ext">
		<ul class="nav nav-list well" style="margin: 0px">
			<li align="center">
				<h5 class="lead" style="word-break: break-all">{{= it.user.name }}</h5>
			</li>
			<li class="{{? it.nav1 }}active{{?}}">
				<a class="btn btn-link" href="/getstarted.html" style="white-space: nowrap;">
					<i class="icon-play pull-left"></i>
					Get Started
				</a>
			</li>
			<li>
				<a href="/logout/" 
					class="btn btn-link"
					style="white-space: nowrap;"
					onclick="FB.logout();">
					<i class="icon-off pull-left"></i>
					Log Out
				</a>
			</li>
		</ul>
	</div>
	<div id="menu_list">
		<ul class="nav roundbord" style="margin: 0px">
			<li class="menu_text_img">
				<a class="btn btn-link" href="/" style="white-space: nowrap;">
					My Data
				</a>
			</li>
		</ul>
	</div>
</div>
